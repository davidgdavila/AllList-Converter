#:import Factory kivy.factory.Factory
Principal:
<Principal>
    id: principal
    eti1: eti1
    barra: barra
    cbox_dyno: cbox_dyno
    cbox_versio: cbox_versio
    MDToolbar:
        title: "All List-Converter"
        pos_hint: {"top": 1}
        right_action_items : [["folder", lambda x : root.seleccionar_archivo()],["account-question", lambda x : root.show_acerca_de()]]
    MDBoxLayout:

        MDLabel:
            text: "    Listas a realizar :"
            size_hint: None, None
            size: "150dp", "48dp"
            halign: "left"
            pos_hint: {"top": .90}
        MDCheckbox:
            id: cbox_dyno
            size_hint: None, None
            size: "30dp", "48dp"
            halign: "left"
            pos_hint: {"top": .90}
            active: root.estado_cbox_dyno
        MDLabel:
            text: "K2/Dyno"
            size_hint: None, None
            size: "70dp", "48dp"
            halign: "left"
            color:"black"
            pos_hint: {"top": .90}
        MDCheckbox:
            id: cbox_versio
            size_hint: None, None
            size: "30dp", "48dp"
            halign: "left"
            pos_hint: {"top": .90}
            active: root.estado_cbox_versio
        MDLabel:
            text: "Versio"
            size_hint: None, None
            size: "48dp", "48dp"
            halign: "left"
            color:"black"
            pos_hint: {"top": .90}

    ProgressBar:
        id: barra
        size_hint: (1,.1)
        max:100
        min:0
        pos_hint: {"top": .88}
    MDLabel:
        id: eti1
        halign: "center"
        text: "Arrastra y suelta la pauta de continuidad aqui..."
        color: 0,0,0, 0.5
        italic: True
        #pos_hint: "500dp"

<Acerca_de>:
    md_bg_color: 1,1,1,1
    orientation:"vertical"
    MDBoxLayout:
        orientation:"vertical"
        Label:
            text:root.texto_etiqueta
            color:(0,0,0,.5)
    MDBoxLayout:
        orientation:"vertical"
        size_hint:(1,.2)
        Label:
            text: "Copyrigth 2022-Todos los derechos reservados"
            color:(0,0,0,.5)
            font_size:11
        Label:
            text: "Clic fuera del recuadro para cerrar"
            color:(0,0,0,1)
            font_size:12











